<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VbPixelGameEngine.Maui.MainPage"
             BackgroundColor="Black">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            
            <Image
                Source="dotnet_bot.png"
                HeightRequest="200"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car" />

            <Label
                Text="vbPixelGameEngine.Maui"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                TextColor="White" />

            <Label
                Text="A cross-platform pixel game engine written in VB.NET"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Cross-platform pixel game engine written in VB.NET"
                FontSize="18"
                HorizontalOptions="Center"
                TextColor="Gray"
                Margin="0,10,0,30" />

            <Button
                x:Name="StartGameButton"
                Text="Start Game"
                SemanticProperties.Hint="Starts the game"
                Clicked="OnStartGameClicked"
                HorizontalOptions="Center"
                FontSize="20"
                Padding="20,10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>